{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*"
    ]
  }